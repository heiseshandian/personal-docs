{
  "packages": [
    "packages/*"
  ],
  "version": "1.17.0",
  "npmClient": "npm",
  "command": {
    "publish": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "message": "chore: publish %s"
    },
    "bootstrap": {
      "hoist": true
    }
  },
  "npmClientArgs": [
    "--ignore-scripts"
  ]
}
