{
  "name": "personal-docs",
  "version": "1.0.0",
  "description": "coding everyday",
  "scripts": {
    "commit": "cz",
    "postcommit": "git push",
    "test:o": "jest -o",
    "test": "jest",
    "prepack": "ts-node ./scripts/prepack.ts",
    "postpack": "ts-node ./scripts/postpack.ts",
    "prerelease": "lerna run build",
    "release": "lerna publish",
    "prerelease:from-package": "lerna run build",
    "release:from-package": "lerna publish from-package",
    "prerelease:alpha": "npm run prerelease",
    "release:alpha": "lerna publish --canary",
    "debug": "jest ./packages/auto-add-subtitle/__tests__/index.spec.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/heiseshandian/personal-docs.git"
  },
  "keywords": [],
  "author": "gqzhang5 <gqzhang5@iflytek.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/heiseshandian/personal-docs/issues"
  },
  "homepage": "https://github.com/heiseshandian/personal-docs#readme",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-lerna-scopes": "^11.0.0",
    "@types/fs-extra": "^9.0.3",
    "@types/jest": "^26.0.14",
    "@types/progress": "^2.0.3",
    "@types/puppeteer": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "commitizen": "^4.2.1",
    "cz-lerna-changelog": "^2.0.3",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lerna": "^3.4.3",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e .git/COMMIT_EDITMSG",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write",
      "git add"
    ]
  }
}
